@page
@model TipCalculatorRazorPages.Pages.IndexModel
@{
    ViewData["Title"] = "Tip Calculator";
}

<h2>Tip Calculator</h2>

<div>
    <form method="post">
        <div class="form-group">
            <label for="MealCost">Meal Cost:</label>
            <input type="text" asp-for="TipCalculator.MealCost" class="form-control" />
            <span asp-validation-for="TipCalculator.MealCost" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="TipPercentage">Tip Percentage:</label>
            <input type="text" asp-for="TipCalculator.TipPercentage" class="form-control" />
            <span asp-validation-for="TipCalculator.TipPercentage" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Calculate</button>
        <a asp-page="Index" class="btn btn-secondary">Clear</a>
    </form>
</div>

@if (Model.TipAmount.HasValue && Model.TotalAmount.HasValue)
{
    <div class="mt-3">
        <h4>Results:</h4>
        <p>Tip Amount: @Model.TipAmount.Value.ToString("C")</p>
        <p>Total Amount: @Model.TotalAmount.Value.ToString("C")</p>
    </div>
}
